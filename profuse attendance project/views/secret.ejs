                            <%= e.fullName %>
                        </td>
                        <!-- <td>Otto</td> -->
                        <td>
                            <%= e.date %>
                        </td>
                        <td>
                            <%= e.attandance %>
                        </td>
                    </tr>

                    <% }) %>
